@page "/tasks"

<h1>Task Manager</h1>

<div>
    @if (Tasks.Count == 0)
    {
        <p>All tasks completed!</p>
    }
    else
    {
        @foreach (var task in Tasks)
{
    <ChildTaskDisplay TaskName="@task" OnComplete="handleTaskCompleted" />
}
    }
</div>



@code {
    private List<string> Tasks = new List<string> { "Task 1", "Task 2", "Task 3" };

    private void handleTaskCompleted(string taskName)
    {
        Tasks.Remove(taskName);
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        Console.WriteLine("Task Manager Initialized");
    }
}